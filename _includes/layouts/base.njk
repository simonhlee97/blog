<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<meta name="generator" content="{{ eleventy.generator }}">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.15.1/cdn/themes/light.css" />
    <script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.15.1/cdn/shoelace.js" ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet" />
		{%- css %}
    {% include "public/css/index.css" %}
    {% include "public/css/header.css" %}
    {% include "public/css/footer.css" %}
    {% include "public/css/tags.css" %}
    {% include "public/css/postlist.css" %}
    {% include "public/css/message-box.css" %}
    {% include "public/css/components.css" %}
    {% endcss %}
		<style>{% getBundle "css" %}</style>
	</head>
	<body>
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		<header>
			<a href="/"><img style="width:169px;" src="/img/logo_sushi.jpg" alt="sushi_logo" /></a>

			<nav>
				<h2 class="visually-hidden">Top level navigation menu</h2>
				<ul class="nav">
				{%- for entry in collections.all | eleventyNavigation %}
					<li class="nav-item"><a href="{{ entry.url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a></li>
				{%- endfor %}
				</ul>
			</nav>
		</header>

		<main id="skip">
			{{ content | safe }}
		</main>

		<footer class='footer'>
      <hr />
      <div>
        <div id="footer-logo"><img style="width: 100%;" src="/img/logo_sushi.jpg" alt="sushi_logo" /></div>
        <ul class="icons">
          <li><a href="https://github.com/simonhlee97"><i class="fa-2x fa-brands fa-square-github"></i></a></li>
          <li><a href="https://open.spotify.com/user/r0nqj37i54ondk4yntbug4beh"><i class="fa-2x fa-brands fa-spotify"></i></a></li>
          <li><a href="#!"><i class="fa-2x fa-brands fa-square-youtube"></i></a></li>
        </ul>
      </div>
      <div class="footer-info">
        <p class="footer-p">Site built with <a href="https://www.11ty.dev/" target="_blank">11ty</a></p>
        <p class="footer-p">Hosted on <a href="https://pages.github.com/" target="_blank">Github Pages</a></p>
        <p class="footer-p">&copy; {{ example.copyright }}</p>
      </div>
    </footer>

	</body>
</html>

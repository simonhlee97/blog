<div class="postlist">
  {% for post in postslist | reverse %}
    <div class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <span>
        <span>
          <h4><a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h4>
          <div class="excerpt">{{post.data.excerpt}}</div>
          <div class="postlist-date"><i class="fa-regular fa-calendar"></i> <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date.toDateString() }}</time></div>
        </span>
      </span>
    </div>
  {% endfor %}
</div>





